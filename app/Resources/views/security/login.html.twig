{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        body{
            background-color: #343a40 !important;
        }
    </style>
    {{ parent() }}

{% endblock %}

{% block body %}

    <div class="container" style="margin-top: 100px;">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-3"><img src="{{ asset( 'images/marvel_logo.png' ) }}" style="height:70px;width:200px;" alt=""></div>
                            <div class="col-md-3"></div>
                        </div>
                        <br>
                        <form class="" action="{{ path('login') }}" method="post">

                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <div class="form-label-group">
                                <label for="username">Login</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Login"  class="form-control" required autofocus/>
                            </div>

                            <div class="form-label-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" required/>
                            </div>
                            <div class="form-label-group" style="margin-top: 20px;">
                                <input type="hidden" name="_target_path" value="/"/>
                                <button class="btn btn-lg btn-dark btn-block text-uppercase" type="submit">Se connecter</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
